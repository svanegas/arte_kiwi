<%= form_with(model: [:admin, @product], local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row no-gutters">
    <div class="col-md-6 col-sm-12 pr-md-3">
      <div class="form-group">
        <%= form.label "Nombre" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label "Descripción" %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label "Precio" %>
        <%= form.number_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag 'product[data][physical_price]', 'Precio físico' %>
        <%= number_field_tag 'product[data][physical_price]', product.data['physical_price'], class: "form-control" %>
      </div>

      <%= form.fields_for :product_images do |f| %>
        <% if product.product_images[0].image.present? && product.product_images[0].image.url.present? %>
          <%= image_tag product.product_images[0].image.url, width: "40%" %>
        <% end %>
        <%= f.file_field :image %>
      <% end %>

      <!-- <div class="form-group">
        <span>Imagen del card en el home. Tamaño: 360x260</span><br>
        <%# if product.card_image.present? && product.card_image.url.present? %>
          <%#= image_tag product.card_image.url(:original), width: "40%", class: "mb-3" %>
        <%# end %>
        <%#= form.file_field :card_image, class: 'form-control', accept: ".jpg, .jpeg, .png, .gif" %>
      </div> -->

      <!-- <span>¿Mostrar servicio?</span>
      <div class="form-group">
        <%#= form.check_box :visible, class: "form-control" %>
      </div> -->
    </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
