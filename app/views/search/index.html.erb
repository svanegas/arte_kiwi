     <option disabled>Ordenar productos</option>
     <option value="cheap">Menor a mayor precio</option>
     <option value="expensive">Mayor a menor precio</option>
  </select>
</section>
<!-- End Sort section -->

<!-- Cards section -->
<section class="d-flex justify-content-center align-items-center">
